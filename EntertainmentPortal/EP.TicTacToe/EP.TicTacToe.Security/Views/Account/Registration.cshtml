@model EP.TicTacToe.Security.Quickstart.Account.RegisterInputModel

<div class="login-page">
    <div class="page-header">
        <h1>Registration</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Registration</h3>
                </div>
                <div class="panel-body">

                    <form asp-route="Registration">

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input class="form-control" placeholder="Username" asp-for="UserName" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>

                            <div>
                                <p>The default users are alice/bob, password: Pass123$</p>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="Registration">Registration</button>
                            </div>

                            <div>
                                <p>Already have an account? <a href=@($"account/login{Context.Request.QueryString}")>Log in now!</a></p>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>